@model MyPassionProject.Models.EventDto
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form method="POST" action="@Url.Action("Update", "Event", new { id = Model.EventId })">

<input type="text" style="display:none;" name="EventId" value="@Model.EventId" />
<div>
    <label>Event Name:</label> <input type="text" name="Title" value="@Model.Title" />
</div>
<div>
    <label>Event Location</label> <input type="text" name="Location" value="@Model.Location" />
</div>
<div>
    <label>Event Date & Time:</label> <input type="text" name="EventDateTime" value="@Model.EventDateTime"/>
</div>
<div>
    <label>Event Capacity</label> <input type="text" name="Capacity" value="@Model.Capacity"/>
</div>
<div>
    <label>Event Details</label> <input type="text" name="Details" value="@Model.Details"/>
</div>
<div>
    <label>Category</label>
    <select name="CategoryId" value="@Model.CategoryId">
        <option value="1">Fun</option>
        <option value="2">Fare</option>
    </select>
</div>
<div>
    <input type="submit" value="Update" />
</div>
<div>
    @using (Html.BeginForm("Cancel", "Event", new { id = Model.EventId }))
    {
        <button type="submit">Cancel</button>
    }

</div>

</form>