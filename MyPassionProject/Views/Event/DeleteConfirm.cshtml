﻿@model MyPassionProject.Models.EventDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<div>
    <h2>Are you sure you want to delete this Event?</h2>
    <p>This action cannot be undone.</p>
    <div class="row">
        <div class="col-6">
            <form  class="d-inline" method="POST" action="/Event/Delete/@Model.EventId">
                <button type="submit" class="btn btn-secondary me-2">Confirm Delete</button>
            </form>
            <a class="btn btn-primary" href="/Event/Find/@Model.EventId">Cancel</a>
        </div>
     </div>
</div>
