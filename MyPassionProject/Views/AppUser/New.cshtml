
@{
    ViewBag.Title = "Create";
}

<h2>Create New User</h2>

<form action="/AppUser/Create" method="POST">
    <div class="my-4">
        <label>User Name:</label> <input type="text" name="UserName" />
    </div>
    <div class="my-4">
        <label>Password:</label> <input type="text" name="Password" />
    </div>
    <div class="my-4">
        <label>Email:</label> <input type="text" name="Email" />
    </div>
    <div class="my-4">
        <label>PhoneNumber:</label> <input type="text" name="PhoneNumber" />
    </div>
    <div class="row my-4">
        <div class="col-6">
            <div>
                <input type="submit"  class="btn btn-primary" value="Create AppUser" />
                <a href="@Url.Action("List", "AppUser")" class="btn btn-secondary">Cancel</a>
            </div>
            </div>
        </div>
</form>
