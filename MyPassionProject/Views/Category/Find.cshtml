@model MyPassionProject.Models.ViewModels.FindCategory
@{
    ViewBag.Title = "Find";
}
<div class="row">
    <div class="col my-4">
        <a href="/Category/List" class="btn btn-info me-2">Go back to list</a>
        <h2 class="my-4">@Model.SelectedCategory.CategoryName</h2>

        <div class="row">
            <div class="col">
                <div class="btn btn-secondary me-2">
                    @Html.ActionLink("Delete This Category", "DeleteConfirm", "Category", new { id = Model.SelectedCategory.CategoryId }, new { style = "color: #ff0000;" })
                </div>
                <a href="/Category/Edit/@Model.SelectedCategory.CategoryId" class="btn btn-primary me-2">Update This Category</a>
            </div>
        </div>

    </div>
</div>

<div style="margin-top:50px;">
    <h3>Events related to this category</h3>
    @foreach (var Event in Model.RelatedEvents)
    {
        <div class="col-4">
            <div class="card mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="/Event/Find/@Event.EventId">@Event.Title</a><br>
                        </h5>
                    </div>
                </div>
            </div>
        </div>
                }
    </div>
         
