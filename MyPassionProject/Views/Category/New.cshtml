
@{
    ViewBag.Title = "Create";
}

<h2>Create New Category</h2>

<form action="/Category/Create" method="POST">
    <div class="my-4">
        <label class="form-label">Category Name:</label>
        <input type="text" class="form-control" name="CategoryName" />
    </div>

    <div class="row">
        <div class="col">
            <input type="submit" value="Create Category" class="btn btn-primary me-2" />
            <a href="@Url.Action("List", "Category")" class="btn btn-secondary">Cancel</a>
        </div>
    </div>




</form>
